<view class='container'>
    <view class='space'></view>
    <form bindsubmit="formSubmit">
        <view class='name'>
            <label >收货人</label><input type="text" name='username' placeholder='请输入收货人姓名' placeholder-class='inputholders' />
        </view>

        <view class='phone'>
            <label >手机号</label><input type="text" name='phonenum' placeholder='请输入收货人联系电话' placeholder-class='inputholders' />
        </view>
        <view class='space'></view>
        <view class='adress'>
    
            <view class='adress_details'>
                <label>所在地区</label>
                <picker bindchange="bindPickerChange" value='{{index}}' range='{{array}}'>    <view wx:if='{{index == -1}}'>请选择</view>
                      <view wx:if='{{index != -1}}'>{{array[index]}}</view>
                </picker>
            </view>
   
            <view class='adress_details'>
                <label>详细地址</label> 
                <view style='display:inline-block;width:72%'>
                    <input type="text" placeholder='请输入您的详细地址' name='address_det' placeholder-class='inputholders' />
                </view>
            </view>

        </view>
        <view class='btn'>
            <button style='background:#FD4A5F' formType="submit">
                保存
            </button>
        </view>
    </form>


</view>