}
.locationbox .list{
    position:relative;
    background:url('../../images/dot-gray.png') no-repeat 22rpx 40rpx;
    background-size:38rpx;

}
.locationbox .list:nth-child(1){
    background:url('../../images/dot-color.png') no-repeat 10rpx 10rpx;
    background-size:60rpx;

