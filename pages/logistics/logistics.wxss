
.goodsMsg{
    background:#fff;
    padding:40rpx 0rpx 40rpx 30rpx;

}
.goodsMsg image{
    width:160rpx;
    height:160rpx;
}
.goodsMsg .left{
    display:inline-block;
    
}
.goodsMsg .right{
    display:inline-block;
    font-size:28rpx;
    vertical-align:top;
    padding-left:30rpx;
}
.goodsMsg .right view{
    padding:2rpx 0;
    color:#C7C4C7;
}
.goodsMsg .right view:nth-child(1){
    font-size:32rpx;
    font-weight:bold;
    padding:0;

}
.locationMsg{
    background:#fff;
    margin-top:30rpx;
    font-size:28rpx;
}
