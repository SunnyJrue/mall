page{
    background-color:#fff ;
    font-family:'Microsoft YaHei'
}

.search{
    padding:20rpx 25rpx;
    background:#fff;

}
.floatEle{
    position:fixed;
    top:0;
    left:0;
    background:#fff;
    width:100%;
    padding:25rpx;
    z-index:10003;
    border-bottom:1px solid #ccc;

}
.floatEle input{
    width:84% !important;
}
.search .position{
    width:175rpx;
    height:68rpx;
    background:#f1f1ef;
    border-radius:10rpx;
    display:inline-block;
    vertical-align:middle;
    font-size:28rpx;
    text-align:center;
    line-height:68rpx;
    position:relative;
    color:#939393;
}
.position image{
    width:30rpx;
    height:30rpx;
    position:absolute;
    top:16rpx;
    left:16rpx;
}
.search .infotext{
    display:inline-block;
    vertical-align:middle;
    height:68rpx;
    margin-left:10rpx;
    width:70%;
    position:relative;

}
.infotext image{
    position:absolute;
    width:40rpx;
    height:40rpx;
    top:14rpx;
    left:20rpx;
}
.search .infotext input{
  
    height:64rpx;
    width:89%;
    border:1px solid #d4d1d0;
    border-radius:10rpx;
    padding-left:80rpx;
    font-size:28rpx;
}
.infotext_plac{
    font-size:28rpx;
}

.filter_goods{
    height:90rpx;
    background:#fff;
    position:fixed;
    width:100%;
    top:38rpx;
    border-top:2rpx solid #ccc;
    border-bottom:2rpx solid #ccc;
    margin-top:78rpx;
    margin-bottom:8rpx;
    z-index:10003;
    display:flex;
    display:-webkit-flex;
    justify-content:space-around;
    line-height:90rpx;
}
.filter_goods view{
    width:25%;
    text-align:center;
    display:inline-block;
    font-size:28rpx;
    color:#919191;
    /* background:url('../../images/down-gray.png') no-repeat; */
    background-size:20rpx;
    background-position:140rpx 34rpx;

}
.filter_goods .hoverd{
    color:#d63838;
    /* background:url('../../images/down-color.png') no-repeat; */
    background-size:20rpx;
    background-position:140rpx 34rpx;
}


.goods-box{
    background:#fff;
    padding:16rpx 16rpx;
    display:flex;
    flex-wrap:wrap;
    justify-content:space-between;
    margin-top:180rpx;
}
.goods-item{
    border:2rpx solid #EDEDED;
    width:350rpx;
    margin-bottom:14rpx;

}

.item-image image{
    width:350rpx;
    height:350rpx;
}
.item-msg{
    font-size:28rpx;
    padding:0 24rpx;
}
.item-msg>view{
    height:45rpx;
    line-height:45rpx;
}
.item-msg .item-name{
    height:45rpx;
    line-height:45rpx;
    font-weight:bold;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}
.item-shop{
    color:#909090;

}
.item-newprice{
    color:#F1512D;
}
.item-oldprice{
    margin-left:35rpx;
    color:#B1B1B1;
    text-decoration:line-through;
}
.item-tips{
    color:#B1B1B1;
    position:relative;
}
.item-num{
    position:absolute;
    right:0;
}

.modal{
    position:fixed;
    width:100%;
    height:100%;
    top:0;
    left:0;
    background:rgba(0,0,0,.7);
    z-index:1000;
}
.select_list{
    height:580rpx;
    width:100%;
    background:#fff;
    position:fixed;
    top:208rpx;
    z-index:1001;
    font-size:28rpx;
    padding-left:32rpx;
    padding-right:32rpx;
    box-sizing:border-box;
    -webkit-box-sizing:border-box;
    border-top:2rpx solid #ececec;
}
.select_list>view{
    border-bottom:2rpx solid #ececec;
    height:85rpx;
    line-height:85rpx;
}
.select_list>scroll-view view{
    border-bottom:2rpx solid #ececec;
    height:85rpx;
    line-height:85rpx;
}
.select_list .btn{
    border:none;
}
.select_list .btn>view{
    height:75rpx;
    line-height:75rpx;
    border:none;
    width:330rpx;
    background:#FF0000;
    color:#fff;
    text-align:center;
    border-radius:18rpx;
    position:absolute;
    bottom:25rpx;
}
.left{
    left:35rpx;
}
.right{
    right:35rpx;
}
.list-selected{
    background:url('../../images/icon-selected.png') no-repeat ;
    background-size:40rpx 40rpx;
    background-position:600rpx 22rpx;
}