  <view class='search'>
      <view class='floatEle'>
          <view class='position' >
              深圳
              <image src='../../images/icon-location.png'></image>
          </view>
          <view class='infotext'>
              <input type="text" placeholder='输入搜索' placeholder-class='infotext_plac' confirm-type='search' bindconfirm='searchGoods' value='{{default}}'/>
              <image src='../../images/icon-search.png'></image>
          </view>
      </view>
  </view>

  排序
  <view class='filter_goods' bindtap='showTap'>
      <view class='{{modalindex ==1?"hoverd":""}}' data-index='1'>品牌</view>
      <view class='{{modalindex ==2?"hoverd":""}}' data-index='2'>综合</view>
      <view class='{{modalindex ==3?"hoverd":""}}' data-index='3'>评价</view>
      <view class='{{modalindex ==4?"hoverd":""}}' data-index='4'>价格</view>
  </view>
  







  <view class="nav_left">
    <block wx:for="{{navLeftItems}}">
      <view class="nav_left_items {{curNav == item.id ? 'active' : ''}}" bindtap="switchRightTab" data-index="{{index}}" data-id="{{item.id}}">{{item.tree.desc}}</view>
    </block>
  </view>
  <scroll-view class="nav_right" scroll-y='true' bindscrolltolower="pullUpLoad" style="height: {{windowHeight}}px;">

