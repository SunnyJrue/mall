.userinfo {
  display:flex;
  display:-webkit-flex;
  align-items:center;
  padding: 68rpx  0 68rpx 30rpx ;
  background: #FDB9C4;
}
.userinfo-avatar {
  width: 118rpx;
  height: 118rpx;
  border-radius: 50%;
  display:inline-block;
}
.userinfo-nickname {
  display:inline-block;
  color: #fff;
  margin-left:15rpx;
  
}
.weui_cell{
    position: relative;
    display: flex;
    padding: 40rpx 45rpx;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    background:#fff;
}

.weui_cell_hd{
  display: inline-block;
  width: 20px;
  margin-right: 5px;
}
.weui_cell_hd image{
  width: 100%;
  height: 20px;
  vertical-align: -2px;
}
.weui_cell_bd{
  display: inline-block;
}
.weui_cell_bd_p{
  font-size: 32rpx;
  color: #000;
}
.badge{
  position: absolute;
  top: 18px;
  right: 40px;
  width: 15px;
  height: 15px;
  line-height: 15px;
  background: #ff0000;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 8px;
}
.with_arrow{
  position: absolute;
  top: 22px;
  right: 30px;
  width: 70px;
  height: 15px;
  background-image: url(../../images/icon-arrowdown.png);
  background-repeat: no-repeat;
  background-size: 30rpx 100%;
  background-position:right;
  font-size:24rpx;
  color:#949494;
}

.info_list{
  margin-top:18rpx;
}

.program{
  
  background:#fff;
  padding-top:2rpx;
  padding:0 36rpx;

  
  
}
.content{
  padding: 25rpx 0;
  border-top:1px solid #e7e7e7;

  font-size:24rpx;
  display:flex;
  display:-webkit-flex;
  justify-content:space-between;


}
.content view{
  text-align:center;
}
.content image{
  width:45rpx;
  height:45rpx;
}