.container {
  display: flex;
  height: 100%;
  align-items: center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  background-color: #F2f2f2;
  color: #939393;
}
.container .cart-image {
  width: 120px;
  height: 120px;
}





.search{
    padding:30rpx;

}
.seareh_order{
    background:#fff;
    height:80rpx;
    position:relative;
}
.seareh_order input{
    display:inline-block;
    height:100%;
    width:87%;
    padding-left:80rpx;
    font-size:28rpx;
}
.seareh_order image{
    width:32rpx;
    height:32rpx;
    position:absolute;
    top:25rpx;
    left:20rpx;
}
.input_order{
    text-align:center;
    font-size:28rpx;
}

.item_list{
    height:300rpx;
    width:100%;
    position:relative;
    margin-bottom:220rpx;
    margin-top:20rpx;
}
.item_list:last-child{
    margin-bottom:400rpx;
}
.item_list image{
    width:45rpx;
    height:45rpx;
    vertical-align:middle;
    margin:0 25rpx 0 35rpx;

}
.title{
    height:80rpx;
    line-height:80rpx;
    background:#fff;
    font-size:28rpx;
    background:url('../../images/icon-arrowdown.png') no-repeat;
    background-size:30rpx 30rpx;
    background-position:350rpx 26rpx;

}
.title label{
    margin-left:30rpx;
}
.status{
    font-size:28rpx;
    position:absolute;
    top:20rpx;
    right:30rpx;
    color:#dc2323;
}
.item_details{
    padding-top:25rpx;
    background:#f5f5f5;
    
}
.item_details  image{
    width:190rpx;
    height:190rpx;
    vertical-align:top;
}
.item_text{
    display:inline-block;
    width:45%;

}
.item_title{
    display: -webkit-box; 
    height:auto;
    font-size:28rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
    vertical-align:top;
}
.item_size{
    font-size:28rpx;
    color:#999;
}
.item_logo image{
    width:95rpx;
    height:25rpx;
    margin:8rpx 0 0 0;
}

.item_num{
    display:inline-block;
    vertical-align:top;
    font-size:28rpx;
    margin-left:26rpx;
}
.dis_price{
    color:#3a4041;
    text-align:right;
}
.old_price{
    color:#999;
    text-align:right;
    text-decoration:line-through;

}
.total_price{
    height:80rpx;
    line-height:80rpx;
    padding-right:20rpx;
    text-align:right;
    background:#fff;
    font-size:28rpx;
    margin-top:25rpx;
}
.price_bold{
    font-size:32rpx;
}
.btn_item{
    height:100rpx;
    background:#fff;
    border-top:2rpx solid #ececec;
    text-align:right;
    display:flex;
    display:-webkit-flex;
    align-items:center;
    justify-content: flex-end;


}
.btn_item view,.btn_item navigator{
    display:inline-block;
    padding:12rpx 20rpx;
    border-radius:10rpx;
    -webkit-border-radius:10rpx;
    border:2rpx solid #c7c7c7;
    font-size:28rpx;
    margin-right:20rpx;

}

.payment{
    position:fixed;
    bottom:0;
    width:100%;
    height:100rpx;
    background:#fff;

    
}
.payment >view{
    display:inline-block;
}
.radios{
    margin-left:30rpx;
    height:100%;
    vertical-align:top;
}
.radios > view{
    line-height:100rpx;
    font-size:32rpx;
}
.btn{
    position:absolute;
    right:0;
    width:200rpx;
    height:100%;
    background:#FD544A;
    text-align:center;
    line-height:100rpx;
    color:#fff;
}
.num{
    text-align:right;
    width:370rpx;
    margin-top:8rpx;
}











