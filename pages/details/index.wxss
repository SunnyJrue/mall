page{
    background-color: #F2F2F2;
    font-size: 14px;
    padding-bottom: 55px;
}

.swiper_box {
    width: 100%;
    height: 460rpx;
}

.swiper_box image {
    width: 100%;
    height: 100%;
    display: inline-block;
    overflow: hidden;
}

.shopping_box{
    padding: 0 45rpx;
    background-color: #FFF;
}

.title{
    margin: 20rpx 0;
    font-weight: bold;
    color: #333;
}

.desc{
    margin: 20rpx 0;
    color: #939393;
    line-height: 22px;
}

.price {
    color: #CC4E40;
    font-size: 28rpx;
}

.price text {
    color: #939393;
    font-size: 28rpx;
    margin-left: 15px;
    /* text-decoration: line-through; */
}

.select_item{
    margin-top:20rpx;
    padding:0 20rpx;
    height:94rpx;
    line-height:94rpx;
    background:#fff;
    position:relative;
    font-weight:bold;
}
.select_item view{
    position:absolute;
    right:20rpx;
    top:0;
    font-size:25px;

}

.goods_mesage{
    margin-top:20rpx;
}
.goods_title{
    background:#fff;
    padding:30rpx 0 0 20rpx;
}
.goods_title image{
    width:94rpx;
    height:94rpx;
}
.goods_title view{
    display:inline-block;
    vertical-align:top;
    margin-left:20rpx;
    font-size:24rpx;
    font-weight:bold;

}

.add_shopcar{
    background:#fff;
    position:fixed;
    width:100%;
    bottom:0;
    display:flex;
    display:-webkit-flex;

    height:116rpx;
    border-top:2rpx solid #BEBEBE;
}
.add_shopcar image{
    width:44rpx;
    height:44rpx;
}
.shop_icon{
    width:118rpx;
    height:116rpx;
    border-right:2rpx solid #E3E3E3;
    
    display:flex;
    display:-webkit-flex;
  
    align-items:center;
}
.shop_icon view{
    text-align:center;
    width:118rpx;
}

.shop_buy{
    display:flex;
    display:-webkit-flex;
    width:100%;
}
.shop_buy view{
    text-align:center;
    line-height:116rpx;
}
.join_shopcar{
    background:#FF9C12;
    color:#fff;
    flex:1;
}
.buy_now{
    background:#FF4546;
    color:#fff;
    flex:1;
}
